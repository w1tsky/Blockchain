<Window x:Class="BlockchainClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlockchainClient"
        mc:Ignorable="d"
        MinHeight="400" MinWidth="650"
       
        Title="MainWindow" Height="700" Width="1280">
    <Grid Background="#111111">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="1" Background="#545353" >

            <Button Name="Explore_Button" Click="Configurate_Click" Content="Explore" Height="65"/>
                  
        </StackPanel>


        <Frame Grid.Column="1" Grid.Row="1" Name="mainFrame" NavigationUIVisibility="Hidden"/>

        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" Background="#545353">
            <StatusBarItem>
              
            </StatusBarItem>
            <StatusBarItem>
               
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
